<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dene</title>
    <style>
        #yazzdır{
            position: absolute;
            top: 50px;
        }
    </style>
</head>
<body>

   


 
    <table border="1px" >
        
            <tr>
                <p id="yazzdır"></p>

            </tr>
        
    </table>
    <button onclick="dara()" >USD</button>
    <button onclick="dar()">EUR </button>


    <script>
        
function dara(üüü){
   
 

fetch('https://api.exchangerate-api.com/v4/latest/USD')
.then(Response=> Response.json())
.then(data=> {

var o=data.rates;
var ü='';


for(var b in o){
ü +='<p>'+b+':'+o[b];
}



document.getElementById("yazzdır").innerHTML="="+ü


})

}


function dar(){


fetch('https://api.exchangerate-api.com/v4/latest/EUR')
.then(Response=> Response.json())
.then(data=> {

var öm=data.rates;
var u='';


for(var y in öm){
u +='<p>'+y+':'+öm[y];
}



document.getElementById("yazzdır").innerHTML="="+u


})

}



    </script>
  
</body>
</html>
