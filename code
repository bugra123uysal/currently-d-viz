    <style>
        /* türk lirası cinsinden dövizler */
        #tur{
            position: absolute;
            height: auto;
            width: auto;
            border: solid 1px yellow;
           overflow: hidden;
        }

        /* usd abd doları cinsinden  dövizler */
        #dll{
            position: absolute;
            height: 400px;
            width: 600px;
            left: 500px;
        
            border: solid 1px yellow;
                }
                /* usd buttonu */
                #dolr{
                    position: absolute;
                    top: 1px;
                    left: 300px;

                }
                /* ingiliz sterlini */
                #ing{
                    position: absolute;
            height: auto;
            width: auto;
            left: 500px;
            border: solid 1px yellow;

